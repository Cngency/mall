<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scoprion.mall.littlesoft.mapper.BannerWxMapper">
    <!--查找banner列表-->
    <select id="list" parameterType="java.lang.String" resultType="com.scoprion.mall.domain.Banner">
        SELECT * from t_banner WHERE  status = "0"
        <if test="bannerName!= null">
        AND  name LIKE  #{bannerName}
        </if>
    </select>
</mapper>