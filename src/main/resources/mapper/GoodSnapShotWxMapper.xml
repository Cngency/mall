<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scoprion.mall.littlesoft.mapper.GoodSnapShotWxMapper">
    <insert id="add" parameterType="com.scoprion.mall.domain.GoodSnapshot">
        INSERT INTO t_good_snapshot(goodSnapShotNo,
                                    goodName,
                                    goodDescription,
                                    promotion,
                                    price,
                                    discount,
                                    mainImgUrl,
                                    createDate,
                                    goodId)
        VALUES (#{goodSnapShotNo},
                #{goodName},
                #{goodDescription},
                #{promotion},
                #{price},
                #{discount},
                #{mainImgUrl},
                NOW(),
                #{goodId})
    </insert>
</mapper>